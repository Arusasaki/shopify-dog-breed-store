{% comment %}
  World-Class Design System for "Wanko no Omise"
  Includes: Dynamic Breed Colors, Google Fonts, Micro-animations, and Premium UI components.
  Paste this before </head> in layout/theme.liquid.
{% endcomment %}

<!-- Google Fonts: Zen Maru Gothic (Japanese) & Outfit (English) -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;500;700&family=Zen+Maru+Gothic:wght@400;500;700&display=swap" rel="stylesheet">

{%- liquid
  # 1. Determine the Breed Color
  assign brand_color = '#d4a06d' # Default Shiba-like Brown
  assign brand_bg_tint = '#faf6f3' # Warm default background
  
  if request.page_type == 'collection' and collection.metafields.custom.brand_color != blank
    assign brand_color = collection.metafields.custom.brand_color
    assign brand_bg_tint = brand_color | color_lighten: 55
  elsif request.page_type == 'product'
    for col in product.collections
      if col.metafields.custom.brand_color != blank
        assign brand_color = col.metafields.custom.brand_color
        assign brand_bg_tint = brand_color | color_lighten: 55
        break
      endif
    endfor
  endif
-%}

<style>
  :root {
    /* --- Typography --- */
    --font-body-family: 'Zen Maru Gothic', sans-serif;
    --font-heading-family: 'Outfit', sans-serif;
    --font-heading-weight: 700;
    
    /* --- Dynamic Colors --- */
    --wanko-accent: {{ brand_color }};
    --wanko-bg-tint: {{ brand_bg_tint }};
    --wanko-text-dark: #333333;
    
    /* --- Premium UI Tokens --- */
    --glass-bg: rgba(255, 255, 255, 0.85);
    --glass-border: 1px solid rgba(255, 255, 255, 0.5);
    --shadow-soft: 0 10px 30px rgba(0, 0, 0, 0.05);
    --shadow-hover: 0 15px 40px rgba(0, 0, 0, 0.1);
    --radius-lg: 24px;
    --radius-md: 16px;
    --radius-sm: 8px;
    
    /* --- Overriding Generic Theme Variables (Dawn) --- */
    --color-button: {{ brand_color }};
    --color-button-text: #ffffff;
    --color-base-accent-1: {{ brand_color }};
    --button-label: #ffffff;
  }

  /* --- 1. Global Reset & Body --- */
  body {
    font-family: var(--font-body-family) !important;
    background-color: var(--wanko-bg-tint) !important;
    color: var(--wanko-text-dark);
    transition: background-color 0.8s ease; /* Smooth transition when switching breeds */
  }

  h1, h2, h3, h4, .h1, .h2, .h3 {
    font-family: var(--font-heading-family) !important;
    letter-spacing: 0.05em;
    color: var(--wanko-text-dark);
  }

  /* --- 2. Glassmorphism Header --- */
  .header-wrapper {
    background: var(--glass-bg) !important;
    backdrop-filter: blur(12px) !important;
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255,255,255,0.3);
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 4px 20px rgba(0,0,0,0.03);
  }
  
  .header__heading-logo {
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  .header__heading-logo:hover {
    transform: scale(1.05) rotate(-2deg);
  }

  /* --- 3. Premium Cards (Collections & Products) --- */
  .card-wrapper {
    border-radius: var(--radius-lg) !important;
    background: white;
    box-shadow: var(--shadow-soft);
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    overflow: hidden;
    border: 1px solid rgba(0,0,0,0.02);
  }

  .card-wrapper:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-hover);
  }

  .card__media {
    border-radius: var(--radius-lg) var(--radius-lg) 0 0 !important;
    overflow: hidden;
  }

  .card__content {
    padding: 20px !important;
    background: white;
  }
  
  .card__heading {
    font-size: 1.1rem !important;
    font-weight: 700;
  }

  /* --- 4. Delightful Buttons --- */
  .button, .shopify-payment-button__button--unbranded {
    border-radius: 100px !important; /* Pill shape */
    font-weight: 700 !important;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    box-shadow: 0 4px 15px {{ brand_color }}66; /* Colored shadow */
    transition: all 0.3s ease !important;
    border: none !important;
    background: var(--wanko-accent) !important;
    color: white !important;
  }

  .button:hover, .shopify-payment-button__button--unbranded:hover {
    transform: scale(1.05); /* Gentle grow */
    box-shadow: 0 8px 25px {{ brand_color }}88;
    filter: brightness(1.1);
  }
  
  .button--secondary {
    background: white !important;
    color: var(--wanko-accent) !important;
    border: 2px solid var(--wanko-accent) !important;
    box-shadow: none !important;
  }

  /* --- 5. Custom Animations --- */
  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .product-grid .grid__item {
    animation: fadeUp 0.6s ease forwards;
    opacity: 0;
  }
  
  /* Stagger animation for grid items */
  .product-grid .grid__item:nth-child(1) { animation-delay: 0.1s; }
  .product-grid .grid__item:nth-child(2) { animation-delay: 0.2s; }
  .product-grid .grid__item:nth-child(3) { animation-delay: 0.3s; }
  .product-grid .grid__item:nth-child(4) { animation-delay: 0.4s; }
  .product-grid .grid__item:nth-child(5) { animation-delay: 0.5s; }
  .product-grid .grid__item:nth-child(6) { animation-delay: 0.6s; }

</style>
